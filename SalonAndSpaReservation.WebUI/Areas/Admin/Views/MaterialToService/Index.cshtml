@model IEnumerable<SalonAndSpaReservation.Domain.Entities.MaterialToService>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Material To Service Pairs</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">ID</th>
                <th>Name</th>
                <th class="text-right">Price</th>
                <th class="text-center">Actions</th>
            </tr>
            @{int c = 0;}
            @foreach (var item in Model)
            {
                c++;
                <tr>
                    <td class="text-right">@c</td>
                    <td>
                        @*   <a href="@Url.Action("Edit","Service", new { @area = "Admin", id=item.ID})" class="btn-link">@item.Name</a>*@
                    </td>
                   @* <td class="text-right">@item.Price.ToString("c")</td>*@
                    <td class="text-center">
                        <a href="@Url.Action("Delete","Service", new { @area = "Admin",id=item.ID })" class="btn btn-default btn-xs">Delete</a>
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        <a href="@Url.Action("Add", "Service", new { @area = "Admin" })" class="btn btn-default">Add a new service</a>
    </div>
</div>