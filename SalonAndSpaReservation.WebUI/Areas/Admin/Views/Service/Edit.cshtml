@model SalonAndSpaReservation.Domain.Entities.Service

@{
    ViewBag.Title = "Service: Edit"+Model.Name;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <h1>Edit @Model.Name</h1>

    @using (Html.BeginForm("Add", "Service", FormMethod.Post, new { @area = "Admin", role = "form" }))
    {

        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.ID)
        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Name" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    @Html.TextAreaFor(model => model.Description, new { @class = "form-control", placeholder = "Description" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    @Html.TextBoxFor(model => model.Duration, new { @class = "form-control", placeholder = "Duration" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    @Html.TextBoxFor(model => model.Price, new { @class = "form-control", placeholder = "Price" })
                </div>
            </div>

        </div>
        <input type="submit" value="Save" class="bg-info" />
    }
    @Html.ActionLink("Cancel and return to List", "Index")
</div>

