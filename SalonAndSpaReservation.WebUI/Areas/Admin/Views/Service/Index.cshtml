@model IEnumerable<SalonAndSpaReservation.Domain.Entities.Service>

@{
    ViewBag.Title = "Index: All Service";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="text-center">Services</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered table-hover">
            <tr>
                <th class="text-center">ID</th>
                <th class="text-center">Name</th>
                <th class="text-center">Price</th>
                <th class="text-center">Add</th>
                <th class="text-center">View</th>
                <th class="text-center">Actions</th>
            </tr>
            @{int c = 0;}
            @foreach (var item in Model)
            {
                c++;
                <tr>
                    <td class="text-center">@c</td>
                    <td class="text-center">
                       <a href="@Url.Action("Edit","Service", new { @area = "Admin", id=item.ID})" class="btn-link">@item.Name</a>
                    </td>
                    <td class="text-center">@item.Price.ToString("c")</td>
                    <td class="text-center">
                        <a href="@Url.Action("AddMaterial","Service", new { @area = "Admin",id=item.ID })" class="btn btn-success btn-xs">Add Materials</a>
                    </td>
                     <td class="text-center">
                        <a href="@Url.Action("ViewMaterial","Service", new { @area = "Admin",id=item.ID })" class="btn btn-success btn-xs">View Materials</a>
                    </td>
                    <td class="text-center">
                        <a href="@Url.Action("Delete","Service", new { @area = "Admin",id=item.ID })" class="btn btn-xs btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        <a href="@Url.Action("Add", "Service", new { @area = "Admin" })" class="btn btn-success">Add a new service</a>
    </div>
</div>