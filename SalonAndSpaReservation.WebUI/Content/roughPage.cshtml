<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/layout.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body class="bg">

    <nav class="navbar navbar-expand{-sm|-md|-lg|-xl} header">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">Salon reservation</a>
            </div>
            <div>
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li><a href="@Url.Action("Index", "Admin", new {area="Admin"})">Got to Admin</a></li>
                </ul>
                <div class="navbar-right">
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
    </nav>

    <div class="container-fluid body-content">
        @RenderBody()
    </div>
    <div class="flex-wrapper">
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Salon Resevation</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <script>
    $('#mycarousel').carousel({
            interval: 2000
        });</script>
</body>
</html>

.ToString("c")